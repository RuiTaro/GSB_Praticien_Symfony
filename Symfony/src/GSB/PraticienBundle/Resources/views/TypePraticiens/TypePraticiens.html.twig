{{ include("GSBPraticienBundle:Head:head.html.twig") }}
{{ include("GSBPraticienBundle:Menu:menu.html.twig") }}

<head>
	{% block stylesheetsCSS %}
   	<link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}">
	{% endblock %}
</head>

<div class="container-fluid">

	<div class="pull-right">
		<a href="{{ path('gsb_praticien_listeAjoutTypePraticiens')}}"><button class="btn btn-primary"> <span class="glyphicon glyphicon-plus"></span></button></a>
	</div>

	<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th class="col-md-1">ID</th>
					<th class="col-md-9">Libelle</th>
					<th class="col-md-2">Action</th>
	  			</tr>
			</thead>
			<tbody>
				{% for TypePraticien in listeTypePraticiens %}
				<tr>
					<th>{{TypePraticien.getTypCode()}}</th>
					<td>{{TypePraticien.getTypLibelle()}}</td>
					<td>
						<a href="{{ path('gsb_praticien_listeModifTypePraticiens',{'id': TypePraticien.getTypCode()})}}">
							<button type="button" class="btn btn-info">Modifier</button>
						</a>
						<a href="{{ path('gsb_praticien_supprTypePraticien', {'id': TypePraticien.getTypCode()})}}"><button type="button" class="btn btn-danger">Supprimer</button></a>
					<td> 

						<a href="{{ path('gsb_praticien_listeModifTypePraticiens', {'id': TypePraticien.getTypCode()})}}">
							<button type="button" class="btn btn-info">Modifier</button>
						</a>
						<a href="{{ path('gsb_praticien_supprTypePraticien', {'id': TypePraticien.getTypCode()})}}"><button type="button" class="btn btn-danger">Supprimer</button></a>
					</td>
        		</tr>
				{% endfor %} 
			</tbody>
	</table>
</div>

<div>
	{% block stylesheetsJS %}
  	<script src="{{ asset('js/jquery.min.js') }}"></script>
  	<script src="{{ asset('js/bootstrap.js') }}"></script>
	{% endblock %}
</div>      