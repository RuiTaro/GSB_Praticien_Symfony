{{ include("GSBPraticienBundle:Head:head.html.twig") }}
{{ include("GSBPraticienBundle:Menu:menu.html.twig") }}

<head>
	{% block stylesheetsCSS %}
   	<link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}">
	{% endblock %}
</head>

<div class="container-fluid">

	<div class="pull-right">
		<a href="{{ path('gsb_praticien_listeAjoutPraticiens')}}"><button class="btn btn-primary"> <span class="glyphicon glyphicon-plus"></span></button></a>
	</div>

	{% for message in app.session.flashbag.get('info') %}
		<p> {{message}} </p>
	{% endfor %}

	<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th class="col-md-1">Id</th>
					<th class="col-md-1">Nom</th>
					<th class="col-md-3">Adresse</th>
					<th class="col-md-1">Code Postal</th>
					<th class="col-md-2">Ville</th> 
					<th class="col-md-1">Coefficient</th>
					<th class="col-md-1">Type</th>		    
					<th class="col-md-2">Action</th>
	  			</tr>
			</thead>
			<tbody>
				{% for praticien in listePraticiens %}
				<tr>
					<th>{{praticien.getPraNum()}}</th>
					<td>{{praticien.getPraNom()}}</td>
					<td>{{praticien.getPraAdresse()}}</td>
					<td>{{praticien.getPraCP()}}</td>
					<td>{{praticien.getPraVille()}}</td>
					<td>{{praticien.getCoefnotoriete()}}</td>
					<td>{{praticien.getTypCode().getTypLibelle()}}</td>
					<td> 
						<a href="{{ path('gsb_praticien_listeModifPraticiens', {'id': praticien.getPraNum()})}}">
							<button type="button" class="btn btn-info">Modifier</button>
						</a>
						<a href="{{ path('gsb_praticien_supprPraticien', {'id': praticien.getPraNum()})}}"><button type="button" class="btn btn-danger">Supprimer</button></a>
					</td>
        		</tr>
				{% endfor %}
			</tbody>
	</table>
</div>

<div>
	{% block stylesheetsJS %}
  	<script src="{{ asset('js/jquery.min.js') }}"></script>
  	<script src="{{ asset('js/bootstrap.js') }}"></script>
	{% endblock %}
</div>